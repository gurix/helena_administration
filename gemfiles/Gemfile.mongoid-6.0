source 'https://rubygems.org'

gemspec path: '../'

gem 'mongoid', '~> 6.0.0.rc0'
gem 'helena', github: 'gurix/helena', branch: 'rails5'

group :development, :test do
  gem 'pry'
  gem 'simplecov'
  gem 'pry-byebug'
  gem 'mongoid-rspec'
  gem 'factory_girl_rails'
  gem 'capybara'
  gem 'faker'
  gem 'rspec-rails', '>= 3'
  gem 'rspec-collection_matchers', '>= 1'
end
